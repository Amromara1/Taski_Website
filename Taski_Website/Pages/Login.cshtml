@page
@model Taski_Website.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<html lang="en">
<head>
    <meta charset="utf-8" />
</head>
<body> 
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 left-column">

            <!-- Left Column Content -->
                
                <div class="image-container">
                    <img src="~/images/Logo.png" alt="Logo" class="centered-image" />
                </div>

        </div>
            <div class="col-md-6 right-column ">
            <!-- Right Column Content -->
                <div class="login-container">
                    <p class="login-heading">LOG IN</p>
                    <p class="signup-link">Not Registered? <a href="/SignUP">Sign Up</a></p>

                    <div class="input-group">
                        <label for="email" class="label">Please Enter Your Email Address</label>
                        <input type="text" id="email" class="rounded-input" />
                    </div>

                    <div class="input-group">
                        <label for="password" class="label">Please Enter Your Password</label>
                        <input type="password" id="password" class="rounded-input" />
                    </div>

                    <button class="login-button">LOG IN</button>
                </div>
        </div>
    </div>
</div>


</body>
</html>
